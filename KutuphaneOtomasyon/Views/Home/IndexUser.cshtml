@using KutuphaneOtomasyon.Models.Entity
@model List<TBL_BORROW_BOOK>
@{
    ViewBag.Title = "IndexUser";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<table class="table table-hover">

    <tr>
        <td>

            Username:@HttpContext.Current.User.Identity.Name

        </td>
    </tr>
    <tr>
        <td>

            ID: @Session["ID"]

        </td>
    </tr>

</table>


<table class="table table-bordered">
    <tr>

        <th>ID</th>
        <th>BOOK NAME</th>
        <th>BORROW DATE</th>
        <th>GİVE BACK DATE</th>
        <th>DATE OF RETURN</th>

    </tr>


    @foreach (var mybook in Model)
    {
        <tr>

            <td>@mybook.id</td>
            <td>@mybook.TBL_BOOKLİST.book_name</td>
            <td>@mybook.borrow_date</td>
            <td>@mybook.give_back_date</td>
            <td>@mybook.date_of_return</td>
            <td> <a href="/BorrowRecord/GiveBackBook/" class="btn btn-primary">Kitap İade</a></td>
        </tr>




    }

